<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/parent_horizontal_padding"
    android:layout_marginEnd="@dimen/parent_horizontal_padding"
    android:fitsSystemWindows="true"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="Kita Preußstraße"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/language_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="Spanisch"
        app:layout_constraintBottom_toBottomOf="@+id/language_title"
        app:layout_constraintStart_toEndOf="@+id/language_title"
        app:layout_constraintTop_toTopOf="@+id/language_title" />

    <TextView
        android:id="@+id/plz_value"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="10409 Berlin"
        app:layout_constraintBottom_toBottomOf="@+id/plz_title"
        app:layout_constraintStart_toEndOf="@+id/plz_title"
        app:layout_constraintTop_toTopOf="@+id/plz_title" />

    <TextView
        android:id="@+id/language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_vertical_rows"
        android:text="Sprachen:"
        app:layout_constraintStart_toStartOf="@+id/name_value"
        app:layout_constraintTop_toBottomOf="@+id/min_age_title" />

    <TextView
        android:id="@+id/min_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_vertical_rows"
        android:text="Alter:"
        app:layout_constraintEnd_toEndOf="@+id/language_title"
        app:layout_constraintTop_toBottomOf="@+id/opening_hours_title" />

    <TextView
        android:id="@+id/opening_hours_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_points_vertical_paragraph"
        android:text="Geöffnet:"
        app:layout_constraintEnd_toEndOf="@+id/language_title"
        app:layout_constraintTop_toBottomOf="@+id/name_value" />

    <TextView
        android:id="@+id/street_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="Preußstraße 2"
        app:layout_constraintBottom_toBottomOf="@+id/street_title"
        app:layout_constraintStart_toEndOf="@+id/street_title"
        app:layout_constraintTop_toTopOf="@+id/street_title" />

    <TextView
        android:id="@+id/web_value"
        android:autoLink="web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="www.ina-kindergarten.de"
        app:layout_constraintBottom_toBottomOf="@+id/web_title"
        app:layout_constraintStart_toEndOf="@+id/web_title"
        app:layout_constraintTop_toTopOf="@+id/web_title" />

    <TextView
        android:id="@+id/mail_value"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:textColor="@color/colorAccent"
        android:text="preussstrasse@ina-kindergarten.de"
        app:layout_constraintBottom_toBottomOf="@+id/mail_title"
        app:layout_constraintStart_toEndOf="@+id/mail_title"
        app:layout_constraintTop_toTopOf="@+id/mail_title" />

    <TextView
        android:id="@+id/plz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_vertical_rows"
        android:text="PLZ/Ort:"
        app:layout_constraintEnd_toEndOf="@+id/street_title"
        app:layout_constraintTop_toBottomOf="@+id/street_title" />

    <TextView
        android:id="@+id/web_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_vertical_rows"
        android:text="Web:"
        app:layout_constraintEnd_toEndOf="@+id/mail_title"
        app:layout_constraintTop_toBottomOf="@+id/mail_title" />

    <TextView
        android:id="@+id/street_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_points_vertical_paragraph"
        android:text="Straße:"
        app:layout_constraintEnd_toEndOf="@+id/web_title"
        app:layout_constraintTop_toBottomOf="@+id/web_title" />

    <TextView
        android:id="@+id/mail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_point_vertical_rows"
        android:text="E-Mail:"
        app:layout_constraintEnd_toEndOf="@+id/phone_title"
        app:layout_constraintTop_toBottomOf="@+id/phone_title" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bullet_points_vertical_paragraph"
        android:text="Telefon:"
        app:layout_constraintEnd_toEndOf="@+id/language_title"
        app:layout_constraintTop_toBottomOf="@+id/language_title" />

    <TextView
        android:id="@+id/phone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="030/4752417"
        app:layout_constraintBottom_toBottomOf="@+id/phone_title"
        app:layout_constraintStart_toEndOf="@+id/phone_title"
        app:layout_constraintTop_toTopOf="@+id/phone_title" />

    <TextView
        android:id="@+id/min_age_value"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="ab 12 Monaten"
        app:layout_constraintBottom_toBottomOf="@+id/min_age_title"
        app:layout_constraintStart_toEndOf="@+id/min_age_title"
        app:layout_constraintTop_toTopOf="@+id/min_age_title" />

    <TextView
        android:id="@+id/opening_hours_value"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="@dimen/bullet_points_horizontal_column"
        android:text="07:00-17:30 Uhr"
        app:layout_constraintBottom_toBottomOf="@+id/opening_hours_title"
        app:layout_constraintStart_toEndOf="@+id/opening_hours_title"
        app:layout_constraintTop_toTopOf="@+id/opening_hours_title" />

</android.support.constraint.ConstraintLayout>